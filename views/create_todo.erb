<h1>Add a task</h1>

<form action="/create_todo" method="post">
  <label for="task">Task</label><br>
  <input type="text" name="task" autofocus><br>
  <label for="description">Description</label><br>
  <input type="text" name="description"><br>
  <label for="date">Date (month day)</label><br>
  <input type="text" name="date"><br>
  <label for="done">Done?</label><br>
  <input type="radio" name="done" value="false"> No<br>
  <input type="radio" name="done" value="true"> Yes<br>